<?php
$passed=0;
if($_GET){
  $email = $_GET['e'];
}
if($_POST){

  $first_name = $_POST['firstname'];
  $last_name  = $_POST['lastname'];
  $email = $_POST['newsletter'];

  if (empty($_SESSION['captcha']) || trim(strtolower($_POST['captext'])) != $_SESSION['captcha']) {
    // What happens when the CAPTCHA was entered incorrectly
   // die ("The reCAPTCHA wasn't entered correctly. Go back and try it again." .
     //    "(reCAPTCHA said: " . $resp->error . ")");

  } else {
    $passed=1;
    // Your code here to handle a successful verification
  


  //Prepare marketing email
  $to = "marketing@thecoaches.com";
  $subject  = "Newsletter subscription from www.thecoaches.com website";
  $headers  = "From: " . $email . "\r\n";
  //$headers .= "Cc: " . "\r\n";
  //$headers .= "Bcc: " . "\r\n";

  // prepare marketing email body text
  $body = "";
  $body .= "This message is from: ".$first_name." ".$last_name."\n\n";
  $body .= "First Name: ".$first_name."\n";
  $body .= "Last Name:  ".$last_name."\n";
  $body .= "Email:      ".$email."\n\n";
  $body .= "Please subscribe me to your newsletter\n";

  $sent = mail($to, $subject, $body, $headers) ;
  if($sent){
    // message was sent
  }


  //Prepare thank you email


$notice_text = "This is a multi-part message in MIME format.";

  // prepare plaintext thank you email body text
  $plain_text  = "";
  $plain_text .= "Dear ".strip_tags($first_name).",\r\n\r\n";
  $plain_text .= "Thank you for subscribing to the Co-active Global News. The next issue will be sent to the email address ".strip_tags($email).". Our newsletter is a quarterly publication distributed in March, June, September and December.\r\n\r\n";
  $plain_text .= "Because you expressed interest in The Coaches Training Institute (CTI), we want to gift you with a free PDF download of the first two chapters (http://www.thecoaches.com/resources/multimedia/two-free-chapters-co-active-coaching.html) of our industry bestselling book 'Co-Active Coaching'. These two chapters outline the basics of CTI's Co-Active coaching model and emphasis on relationship building as the foundation of effective coaching.\r\n\r\n";
  $plain_text .= "If you have any questions about our Co-Active Coach Training and Certification programs or our Co-Active Leadership Program, please contact a Program Advisor at 800-691-6003 x3 or 415-451-6000 x3. Our training is offered in many countries outside North America. To find contact information for our international training partners, please check our international page (http://www.thecoaches.com/international/).\r\n\r\n";
  $plain_text .= "Warmly,\r\n";
  $plain_text .= "Marcia Norris\r\n";
  $plain_text .= "Director of Marketing Communications, CTI\r\n";


  // prepare HTML thank you email body text
  $body  = "";
  $body .= '<p>Dear '.strip_tags($first_name).',</p>';
  $body .= '<p>Thank you for subscribing to the &ldquo;Co-active Global News&rdquo;. The next issue will be sent to the email address '.strip_tags($email).'. Our newsletter is a quarterly publication distributed in March, June, September and December.</p>';
  $body .= '<p>Because you expressed interest in The Coaches Training Institute (CTI), we want to gift you with a <a href="http://www.thecoaches.com/resources/multimedia/two-free-chapters-co-active-coaching.html">free PDF download of the first two chapters</a> of our industry bestselling book <em>&ldquo;Co-Active Coaching.&rdquo;</em> These two chapters outline the basics of CTI&rsquo;s Co-Active coaching model and emphasis on relationship building as the foundation of effective coaching.</p>';
  $body .= '<p>If you have any questions about our <a href="http://www.thecoaches.com/coach-training/">Co-Active Coach Training and Certification</a> programs or our <a href="http://www.thecoaches.com/leadership/">Co-Active Leadership Program</a>, please contact a Program Advisor at 800-691-6003 x3 or 415-451-6000 x3. Our training is offered in many countries outside North America. To find contact information for our international training partners, please check our <a href="http://www.thecoaches.com/international/">international page</a>.</p>';
  $body .= '<p>Warmly,</p>';
  $body .= '<p>Marcia Norris</p>';
  $body .= '<p>Director of Marketing Communications, CTI</p><p> </p>';

$semi_rand = md5(time());
$mime_boundary = "==MULTIPART_BOUNDARY_$semi_rand";
$mime_boundary_header = chr(34) . $mime_boundary . chr(34);


  $to = strip_tags($email);
  $from = "no-reply@thecoaches.com";

  $subject  = "Your newsletter subscription request was received by The Coaches Training Institute";

$body = "$notice_text

--$mime_boundary
Content-Type: text/plain; charset=us-ascii
Content-Transfer-Encoding: 7bit

$plain_text

--$mime_boundary
Content-Type: text/html; charset=us-ascii
Content-Transfer-Encoding: 7bit

$body

--$mime_boundary--";

if (@mail($to, $subject, $body, 
    "From: " . $from . "\n" . 
          //"bcc: " . $bcc . "\n" . 
    "MIME-Version: 1.0\n" . 
    "Content-Type: multipart/alternative;\n" . 
    "     boundary=" . $mime_boundary_header))
  $sent = 1;
  //echo "Email sent successfully.";
//else
  //echo "Email NOT sent successfully!";

  }
}
